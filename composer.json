{
    "name": "zerodahero/laravel-workflow",
    "description": "Integerate Symfony Workflow component into Laravel.",
    "keywords": ["workflow", "symfony", "laravel", "laravel7", "laravel8"],
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "symfony/workflow": "^5.0|^6.0",
        "symfony/process": "^5.0|^6.0",
        "symfony/event-dispatcher-contracts": "^2.4",
        "illuminate/console": "^7.1|^8.0|^9.0",
        "illuminate/support": "^7.1|^8.0|^9.0",
        "illuminate/contracts": "^7.1|^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "ZeroDaHero\\LaravelWorkflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        },
        "laravel": {
            "providers": [
                "ZeroDaHero\\LaravelWorkflow\\WorkflowServiceProvider"
            ],
            "aliases": {
                "Workflow": "ZeroDaHero\\LaravelWorkflow\\Facades\\WorkflowFacade"
            }
        }
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^8.0|^9.0",
        "symfony/var-dumper": "^5.0|^6.0",
        "fakerphp/faker": "^1.13",
        "orchestra/testbench": "^5.2|^6.0|^7.0"
    }
}
